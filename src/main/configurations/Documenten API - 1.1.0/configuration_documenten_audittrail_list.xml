<Module 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../FrankConfig.xsd"
	>
	<Adapter 
		name="audittrail_list"
		
		>
		<Receiver name="audittrail_list">
			<ApiListener 
				name="audittrail_list" 
				method="GET"
				uriPattern="/documenten/api/v1/enkelvoudiginformatieobjecten/{enkelvoudiginformatieobject_uuid}/audittrail"
				produces="JSON"
				consumes="ANY"
				/>
		</Receiver>
		<Pipeline>
			<Exits>
				<Exit name="EXIT" state="SUCCESS" code="200"/>
				<Exit name="NotModified" state="SUCCESS" code="304"/>
				<Exit name="BadRequest" state="ERROR" code="400"/>
				<Exit name="NotAuthorized" state="ERROR" code="401" empty="true"/>
				<Exit name="NotAllowed" state="ERROR" code="403" empty="true"/>
				<Exit name="PreconditionFailed" state="ERROR" code="412"/>
				<Exit name="ServerError" state="ERROR" code="500"/>
				<Exit name="Timeout" state="ERROR" code="504"/>
			</Exits>

			<FixedResultPipe name="Helloworld" returnString="Hello World!"/>
		</Pipeline>
	</Adapter>
</Module>